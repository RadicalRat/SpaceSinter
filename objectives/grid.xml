<?xml version="1.0" encoding="UTF-8" ?>
<root BTCPP_format="4" main_tree_to_execute="Grid">
  <!--//////////-->
  <BehaviorTree
    ID="Grid"
    _description="Move the arm in a grid pattern"
    _favorite="false"
  >
    <Control ID="Sequence" name="TopLevelSequence">
      <Action
        ID="CreateStampedPose"
        reference_frame="root"
        stamped_pose="{stamped_pose}"
        position_xyz="0.2;0.2;0"
      />
      <Action
        ID="VisualizePose"
        marker_lifetime="0.000000"
        marker_name="pose"
        marker_size="0.100000"
        pose="{stamped_pose}"
      />
      <Action
        ID="GenerateCoveragePath"
        vector_of_poses="{pose_stamped_vector}"
        bottom_right_corner="{stamped_pose}"
        height="0.5"
        width="0.5"
        stride_distance="0.02"
      />
      <Action
        ID="ExecuteFollowJointTrajectory"
        execute_follow_joint_trajectory_action_name="/joint_trajectory_controller/follow_joint_trajectory"
        goal_duration_tolerance="-1.000000"
        goal_position_tolerance="0.000000"
        goal_time_tolerance="0.000000"
        joint_trajectory_msg="{joint_trajectory_msg}"
        trajectory_remainder="{joint_trajectory_remainder}"
      />
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="Grid">
      <MetadataFields>
        <Metadata runnable="true" />
        <Metadata subcategory="Sinter" />
      </MetadataFields>
    </SubTree>
  </TreeNodesModel>
</root>
